<script type="text/javascript">

var finalGraph = document.getElementById('grafica').getContext('2d');

var allshouts = '<c:out value=${statistics.get(count.all.shouts)}/>';
var shortshouts = '<c:out value=$statistics.get(count.short.shouts)}/>';
var longhouts = '<c:out value=$statistics.get(count.long.shouts)}/>';

