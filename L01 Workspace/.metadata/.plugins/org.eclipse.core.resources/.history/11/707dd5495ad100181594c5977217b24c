    type: 'bar',
    data: {
      labels: ["All shout", "Short shout", "Long shout"],
      datasets: [
        {
          label: "Number",
          backgroundColor: ["#3e95cd", "#8e5ea2","#3cba9f"],
          data: [allshouts, shortshouts, longshouts],
          backgourdColor:'blue'
        }
      ]
    }
});
